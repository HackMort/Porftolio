---
import Section from "../Section.astro"
import { certificates } from "@cv"
---

<Section title="Certificates">
  <ul>
    {
      certificates.map(({ name, url, issuer }) => {
        const iconName = name;
        return (
          <li>
            <a href={url} target="_blank" rel="noopener noreferrer">
              {issuer} - {name}
            </a>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    list-style-type: disc;
    margin-left: 1rem;
  }

  li {
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    line-height: 1.5rem;
  }
</style>
